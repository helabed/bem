- unless cart.line_items.empty?
  .cart_title Your Cart
  %table
    = render(cart.line_items)
    %tr.total_line
      %td{:colspan => "2"} Total
      %td.total_cell= number_to_currency(cart.total_price, :locale => :lb)
  = button_to "Checkout", :action => 'new_in_store', :controller => :orders, :method => :get
  = button_to 'Empty cart', cart, :method => :delete,                                |
    :confirm => "Press 'Ok' to delete all items in this cart, 'Cancel' to keep them" |