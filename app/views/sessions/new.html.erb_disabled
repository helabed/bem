<div class="depot_form">
  <fieldset>
    <legend>Login</legend>

    <%= form_for(:session, :url => sessions_path) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
      </div>
      <div class="actions">
        <%= f.submit "Login" %>
      </div>
    <% end %>

    <p>New user? <%= link_to "Register now!", signup_path %></p>

  </fieldset>
</div>
