.depot_form
  %fieldset
    %legend Send Account Activation Instructions
    = form_tag '/activation', :method => :post do
      .field
        = label_tag :email
        = text_field_tag :email, params[:email]
      .actions
        = submit_tag "Email Activation Instructions"
    %p
      New user? #{link_to "Register now!", signup_path}
    %p
      Already a user? #{link_to "Login now!", signin_path}
