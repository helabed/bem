<!DOCTYPE html>
<html>
<head>
  <title>Beyt el Mouneh | <%= "#{@title}" %></title>
  <%= stylesheet_link_tag "store", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<body id="store">
  <div id="logo">
    <%= image_tag("beyt_el_mouneh.jpg", :size => '90x60') %>
  </div>
  <div id="banner">
    <%= @page_title || "Beyt el Mouneh Online Store" %>
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
          <%= render @cart %>
        <% end %>
      <% end %>
      <a href="/">Home</a><br />
      <a href="/about">About</a><br />
      <a href="/contact">Contact</a><br />
      <br />
      <% if signed_in? %>
        <a href="/signout">Logout</a><br />
       <%= link_to "Settings", edit_user_path(current_user) %><br />
      <% else %>
        <a href="/signin">Login</a><br />
        <a href="/signup">Register</a><br />
      <% end %>
      <% if is_admin? %>
        <a href="/products">Admin</a><br />
      <% end %>
    </div>
    <div id="main">
      <% if not flash.empty? %>
      <section class="round">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %>
      </section>
      <% end %>
      <%= yield %>
    </div>
  </div>

</body>
</html>

