<div class="depot_form">
  <fieldset>
    <legend>Register for a new account</legend>
    <%= form_for(@user) do |f| %>

      <%= render 'fields', :f => f  %>

      <div class="actions">
        <%= f.submit "Register" %>
      </div>
    <% end %>

    <p>Already a user? <%= link_to "Login now!", signin_path %></p>
  </fieldset>
</div>
